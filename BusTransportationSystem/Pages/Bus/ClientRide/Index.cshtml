@page
@model BusTransportationSystem.Pages.Bus.ClientRide.IndexModel
@{
    Layout = "_DashLayout";
}
<!DOCTYPE html>
<html lang="en">


<div class="d-flex" id="wrapper">

    <div/>
  
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br />
        <br />
        <h2>Your Current Ride</h2>
        <a class="btn btn-primary btn-sm" href="/Bus/ClientRide/ClientRide">New Client Ride</a>
        <table class="table">
            <thead>
                <tr>
                    <th>Vehicle ID</th>
                    <th>Trip ID</th>
                    <th>User ID</th>
                    <th>Payement Status</th>
                    <th>Checkin</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehicle in Model.VehicleList)
                {
                    <tr>
                        <td>@vehicle.id</td>
                        <td>@vehicle.trip_id</td>
                        <td>@vehicle.user_id</td>
                        <td>@vehicle.payment_status</td>
                        <td>@vehicle.checkin</td>
                        <td>@vehicle.tripDate</td>
                        <td>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");

            toggleButton.onclick = function () {
                el.classList.toggle("toggled");
            };
        </script>

