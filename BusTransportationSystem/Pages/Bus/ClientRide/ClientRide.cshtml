@page
@model ClientRideModel
@{
    Layout = "_DashLayout";
}
<!DOCTYPE html>
<html lang="en">
        <br />
        <br />
        <h2>add your Ride</h2>

        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        }

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="trip_id">Trip Id</label>
        <div class="col-sm-6">
            <select class="form-select" name="trip_id">
                <option value="1">Trip 1</option>
                <option value="2">Trip 2</option>
              
            </select>
        </div>
    </div>


    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="tripdate">Trip Date</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="tripdate" placeholder="select your final destination">
        </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="tripdate">Trip Date</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="tripdate" placeholder="select your final destination">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-4 d-grid">
            <button type="submit" class="btn btn-primary">BOOK</button>
        </div>
        <div class="offset-sm-3 col-sm-4 d-grid">
            <a class="btn btn-outline-primary" href="/Bus/ClientRide" role="button">Go back</a>
        </div>
    </div>
</form>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
        
