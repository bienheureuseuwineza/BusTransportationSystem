@page
@model BusTransportationSystem.Pages.Bus.ManageDriver.CreateModel
@{
    Layout = null;
}
<br/>
<h2>New Driver</h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/AdminDashboard.css" />
    <title>@ViewData["Title"]</title>
</head>

<div class="d-flex" id="wrapper">
    <!-- Sidebar -->
    <div class="bg-white" id="sidebar-wrapper">
        <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
            <i class="fas fa-toolbox me-2"></i>PANEL
        </div>
        <div class="list-group list-group-flush my-3">
            <a href="#" class="list-group-item list-group-item-action bg-transparent second-text active">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
            </a>
            <a href="UserManagement" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                <i class="fas fa-user me-2"></i>User Management
            </a>
            <a href="ManageVehicle/Index" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                <i class="fas fa-car me-2"></i>Vehicle Management
            </a>
            <a href="ManageTrip/Index" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                <i class="fas fa-road me-2"></i>Trip Management
            </a>
            <a href="ManageDriver/Index" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                <i class="fas fa-id-card me-2"></i>Driver Management
            </a>

            <a href="#" class="list-group-item list-group-item-action bg-transparent text-danger fw-bold">
                <i class="fas fa-power-off me-2"></i>Logout
            </a>
        </div>
    </div>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-solid fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                <h2 class="fs-2 m-0">Dashboard</h2>
            </div>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle second-text fw-bold" href="#" id="navbarDropdown"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user me-2"></i>Admin
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}
<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="firstName">First Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="firstName" placeholder="First Name" value="@Model.newDriver.FirstName">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="lastName">Last Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="lastName" placeholder="Last Name" value="@Model.newDriver.LastName">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="driverCategory">Driver Category</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="driverCategory" placeholder="Driver Category" value="@Model.newDriver.Category">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="phone">Phone</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="phone" placeholder="Phone" value="@Model.newDriver.Phone">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="dob">Date of Birth</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="dob" value="@Model.newDriver.DateOfBirth.ToString("yyyy-MM-dd")">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-4 d-grid">
            <button type="submit" class="btn btn-primary">Add Driver</button>
        </div>
        <div class="offset-sm-3 col-sm-4 d-grid">
            <a class="btn btn-outline-primary" href="/Bus/ManageDriver/Index" role="button">Go back</a>
        </div>
    </div>
</form>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");

            toggleButton.onclick = function () {
                el.classList.toggle("toggled");
            };
        </script>
