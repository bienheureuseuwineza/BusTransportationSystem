@page
@model BusTransportationSystem.Pages.Bus.ManageStops.CreateModel
@{
    Layout = "_AdminLayout";

}

<br />
<h2>New Bus Station</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="destination">Destination</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="destination" placeholder="Destination" value="@Model.newStop.StopsDestination">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label" for="tripId">Trip ID</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="tripId" placeholder="Trip ID" value="@Model.newStop.TripId">
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-4 d-grid">
            <button type="submit" class="btn btn-primary">Add Stop</button>
        </div>
        <div class="offset-sm-3 col-sm-4 d-grid">
            <a class="btn btn-outline-primary" href="/Bus/ManageStop/Index" role="button">Go back</a>
        </div>
    </div>
</form>

       