@page
@model BusTransportationSystem.Pages.LoginModel
@{
}
<!-- Login -->

<div class="contact_form_section">
	<div class="container">
		<div class="row">
			<div class="col">

				<!-- Login Form -->

				<div class="contact_form_container">
					<div class="contact_title text-center">Login Here</div>
					<div class="contact_text text-center ">
						Don't have an account? <a href="./Register" class="form_submit_button ">Register</a>
					</div>
					<form method="POST" id="contact_form" class="contact_form text-center">

						<input type="email"  name="email" class="contact_form_name input_field" placeholder="Email" required="required" data-error="Name is required.">

						<input type="password" name="password" class="contact_form_name input_field" placeholder="Password" required="required" data-error="Email is required.">

						

						<div class="d-flex justify-content-between align-items-center">
							<!-- Add a checkbox for Administrator login -->
							<div class="form-check">
								<input class="form-check-input" type="checkbox" id="isAdmin" name="isAdmin" />
								<label class="form-check-label" for="isAdmin">I am an administrator</label>
							</div>

							<a href="#!" class="text-body">Forgot password?</a>
						</div>

						<div class="text-center text-lg-start mt-4 pt-2">
							<button type="submit" id="form_submit_button" class="form_submit_button button trans_200">Login<span></span><span></span><span></span></button>
							
							
						</div>

						
					</form>

				</div>

			</div>
		</div>
	</div>
</div>
